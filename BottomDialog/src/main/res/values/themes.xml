<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="asdialog_Theme.BILIBILIAS" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:textColor">@color/asdialog_color_primary_light_text</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/asdialog_color_primary</item>
        <item name="colorPrimaryVariant">#E2E6FA</item>
        <item name="colorOnPrimary">@color/asdialog_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/asdialog_teal_200</item>
        <item name="colorSecondaryVariant">@color/asdialog_teal_700</item>
        <item name="colorOnSecondary">@color/asdialog_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:letterSpacing">0.05</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="asdialog_Home_TabLayoutTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="asdialog_Theme.SplashOverlay" parent="Theme.BILIBILIAS">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/asdialog_white</item>
        <item name="android:navigationBarColor">@color/asdialog_white</item>
        <item name="android:windowBackground">@color/asdialog_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="asdialog_BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="asdialog_bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/asdialog_dialog_bottom_sheet_bg</item>
    </style>

    <style name="asdialog_asVideoToolStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="collapsedTitleTextColor">@color/asdialog_black</item>
        <item name="contentScrim">@color/asdialog_white</item>
    </style>


    <style name="asdialog_Theme.BILIBILIAS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>